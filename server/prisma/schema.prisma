generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Number {
  id        Int     @id @default(autoincrement())
  number    Int     @unique
  status    String  // 'available', 'reserved', 'sold'
  buyerName String?
  buyerPhone String?
  paymentMethod String? // 'cash', 'sinpe'
  reservedAt DateTime?
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
